package com.maxtrain;

public class JavaTypes {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String name = "Java";
		int len = name.length();
		System.out.println("The length of "+ name +" is " + len);
		//Number types
		int anInteger = 0;
		long aVeryBigInteger = 0;
		short aSmallerInteger = 0;
		//Number types with decimals
		float aFloat = 0;
		double aDouble = 0.0;
		//Boolean type
		Boolean aBoolean = true;
		//Character
		char c = 'A';
		
// different type of types of variables
//scalar and reference
// you cannot define scalar as null ( ini i = null )
//any kind of reference, you can set to null
//classes you create are reference types
//most libraries are reference type too.
//strings can be treated like a scalar type but is actually a reference type.

		
	}
}
